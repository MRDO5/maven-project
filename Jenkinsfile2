node {

	checkout scm
   
    tools {
        maven 'localMaven'
        }
    stages{
        stage('Build'){
                steps { 
                   sh 'mvn clean package'
	  	  }
	        }
	stage('Build Docekr images'){  
                steps { 
 		   sh "docker build . -t martin55/tomcatwebapp:${env.BUILD_ID}"
		  }
	        }
	 stage('Push Docker image'){ 
                steps {
		    withCredentials([string(credentialsId: 'dockerhub-pwd', variable: 'docker-pwd')]) {
		      sh "docker login -u martin55 -p ${docker-pwd}" 
 			}
		      sh "docker push martin55/tomcatwebapp:${env.BUILD_ID}"
                }
	     }
         }
     }


